<div>
  <h3><%= "Go on #{@attraction.name}" %></h3>
</div>

<div>
  <%= link_to 'See attractions', attractions_path%> <br /><br />
  <%= button_to 'Go on this ride', ride_path, params: {
      'ride[user_id]': current_user,
      'ride[attraction_id]': @attraction
    } if !current_user.admin%>
</div>

<div>
  <% if current_user.admin %>
    <%= link_to 'Edit Attraction', edit_attraction_path %><br />
    <%= link_to 'Delete', attraction_path, method: 'delete' %><br />
    <%= link_to 'Add Ride ', new_attraction_path %><br />
  <% end %>
</div>
