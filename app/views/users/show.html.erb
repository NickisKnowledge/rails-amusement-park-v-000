<div>
  <h1><%= @message if @message %></h1>
</div>
<div>
  <h2><%= 'ADMIN' if @user.admin %></h2>
  <h2><%= @user.name %></h2>
</div>

<div>
  <label>Tickets: </label>
  <%= @user.tickets %><br />

  <label>Mood: </label>
  <%= @user.mood %><br />

  <label>Height: </label>
  <%= @user.height %><br />
</div>

<div>
  <%= link_to 'Log Out', logout_path, method: 'delete' %>
</div>

<div>
  <%= link_to 'See attractions', attractions_path %>
</div>
